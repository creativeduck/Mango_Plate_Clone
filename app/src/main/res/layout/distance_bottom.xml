<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_hideable="true"
    app:behavior_peekHeight="200dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="내 위치에서 검색 반경 선택"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/orange"
        android:textSize="13sp"/>
    <TextView
        android:id="@+id/distance_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="100m"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/orange"/>

    <SeekBar
        android:layout_marginTop="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="4"
        android:progress="0"
        android:thumb="@drawable/seek_thumb"
        android:tickMark="@drawable/seek_mark"
        android:backgroundTint="@color/seekbar"
        android:progressBackgroundTint="@color/seekbar"
        android:progressTint="@color/seekbar"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 주변"
        android:textColor="@color/moredarkgray"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"/>


</LinearLayout>