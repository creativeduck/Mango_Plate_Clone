<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageView
        android:id="@+id/selectImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/food_item_bossam"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/infoLinear"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/selectImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_weight="7"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/selectNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="1."
                android:textSize="14sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/selectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginStart="5dp"
                android:maxLines="1"
                android:maxLength="9"
                android:ellipsize="end"
                android:text="스시쇼부"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/selectGu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxLength="12"
                android:ellipsize="end"
                android:text="은평구"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/trdLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/textVisit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35336"
                android:gravity="center"
                android:layout_gravity="center"
                android:drawablePadding="3dp"
                android:drawableStart="@drawable/ic_visibility_shape"
                android:textColor="@color/doubledarkgray"
                android:textSize="10sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="40"
                android:drawablePadding="3dp"
                android:drawableStart="@drawable/ic_create_shape"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/doubledarkgray"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>